{
  "name": "@nw55/common",
  "description": "nw55 common js/ts library",
  "version": "0.2.0-alpha",
  "repository": {
    "type": "git",
    "url": "https://github.com/nw55/es-common.git"
  },
  "author": "Niklas Werner (nw55) <nw55@outlook.com>",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "lib/index.js",
  "types": "lib/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "build:esm": "tsc -b",
    "build:cjs": "tsc -b tsconfig.cjs.json",
    "dev": "tsc -w --noEmit",
    "test": "cd test && mocha",
    "test:watch": "cd test && mocha -w --reporter min",
    "lint": "eslint . --ext .ts -c eslint-config.js",
    "lint:fix": "eslint . --ext .ts -c eslint-config.js --fix",
    "build": "yarn build:esm && yarn build:cjs && yarn lint",
    "ci": "yarn build && yarn test",
    "prepublishOnly": "yarn ci"
  },
  "files": [
    "/dist",
    "/lib",
    "/src"
  ],
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@nw55/build-tools": "~0.2.2",
    "@nw55/eslint-config": "~0.2.0",
    "@types/chai": "^4.2.12",
    "@types/mocha": "^8.0.2",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "chai": "^4.2.0",
    "eslint": "^7.7.0",
    "mocha": "^8.1.1",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.7"
  }
}
